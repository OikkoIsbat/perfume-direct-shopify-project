{% unless settings.slides_mode %}
{% if section.settings.enable %}
    <div class="holder  global_width {{ section.settings.outer_margin }} {% if section.settings.show_above_footer %}show_above_footer{% endif %}">
        <div class="new-cont">
            {% if section.settings.heading != blank %}<h2 class="h1-style text-center">{{ section.settings.heading }}</h2>{% endif %}
<!--             <ul class="brand-carousel js-brand-carousel slick-arrows-aside-simple"> -->
           <ul class="new-ul">
                {% for block in section.blocks %}
                    {%- if block.settings.enable -%}
                        <li class="w-auto">
                            <a  class="circle-design" href="{{ block.settings.link }}" target="{{ block.settings.link_target }}"  title="{{ block.settings.title }}">
                                {% assign _img = block.settings.image %}
                                {% assign _img_size = '300x' %}
                                {% if _img %}
                                    <img class="lazyload blur-up logo-img"
                                         data-src="{{ _img | img_url: _img_size }}"
                                         data-srcset="{{ _img | img_url: _img_size }} 1x, {{ _img | img_url: _img_size, scale: 2 }} 2x"
                                         data-aspectratio="{{ _img.aspect_ratio }}"
                                         alt="{{ block.settings.title }}">
                                {%- else -%}
                                    {% include 'image-placeholder-aspect-ratio', width: 150, height: 80, text: '&nbsp;' %}
                                {%- endif -%}
                            </a>
                        </li>
                    {%- endif -%}
                {% endfor %}
            </ul>
            {% comment %} {% if section.settings.link_button_yes %}<div class="text-center"><a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn-decor">{{ section.settings.link_button_text }}</a></div>{% endif %} {% endcomment %}
            {% if section.settings.link_button_yes %}<div class="text-center"><a {% if section.settings.link %}href="{{ section.settings.link }}" target="{{ section.settings.link_target }}"{% endif %} class="btn btn-outline">{{ section.settings.link_button_text }}</a></div>{% endif %}
        </div>
    </div>
{% endif %}
{% endunless %}
